//Fonts
    $Font = 'Open Sans'
    $MainFont = 'Open Sans Semibold'
    $MainFontBold = 'Open Sans Bold'
    $AlternateFont = sans-serif
    $ButtonFont = 'Open Sans Semibold'

//Main app
    $BgColor1 = #684228
    $BgColor2 = #5E3926

    $Text1 = #FE9148
    $Text2 = #535353
    $Text3 = #6f6f6f
    $Text4 = #848484
    $TextError = #FE9148
    
    $CloseButton = #f00
    $CloseButtonHover = #A90909

    $SpinnerColor1 = #B07E37
    $SpinnerColor2 = rgba(176, 126, 55, 0.95)
    
    $ScrollBarBg = #684228
    $ScrollBarThumb =  #bf8d47
    $ScrollBarThumbHover = #aa7a36

//Top Bar
    $TitleBarBg = #B07E37
    $TitleBarText = #fff
    $TitleBarOpacity = .97
    $FullScreenButton = #fff
    $FullScreenButtonHover = #FE9148

    $FilterBarBg = #B07E37
    $FilterBarText = #fff
    $FilterBarTextHover = #FE9148
    $FilterBarActive = #FE9148
    $FilterBarOpacity = .97
    
    $SearchBoxBg = $BgColor2

    $DropDownBg = #B07E37
    $DropDownBgHover = rgba(0, 0, 0, 0.3)
    $DropDownTextHover = #fff
    $DropDownText = #fff
    $DropDownOpacity = 0.95
    
    $FilterBarIcon = #fff
    $FilterBarIconHover = #FE9148
	$FilterBarIcon-PosterWidth = #FE9148

    $TopBarShadow = none
    
//Buttons
    $ButtonBg = darken($TitleBarBg,15%)
    $ButtonBgHover = darken($TitleBarBg,25%)
    $ButtonBgActive = darken($TitleBarBg,35%)
    
    $ButtonBgDisabled = #1aa015
    $ButtonBgDisabled = #199f13
    
    $ButtonText = #fff
    $ButtonTextHover = #fff

    $ButtonRadius = 3px
    
//Posters
    $PosterRadius = 4px
    $PosterHoverBorder = #B07E37
    $PosterHoverOverlay = rgba(23, 24, 27, 0.6)
    $PosterShadow = 0px 0px 4px
    
//TV Series
    $ShowBgColor1 = $BgColor1
    $ShowBgColor2 = darken($BgColor1,5%)

    $EpisodeDetailsBg = $BgColor1

    $ShowText1 = #bf8d47
    $ShowText2 = #bf8d47

    $SaisonListText = #bf8d47
    $EpisodeListText = #bf8d47

    $EpisodeSelectorBg = darken($BgColor1,35%)
	$EpisodeSelectorHover = darken($BgColor1,5%)
    $EpisodeSelectorText = $ButtonText

	$ShowWatchedIcon_false = rgba(#fff,0.3)
	$ShowWatchedIcon_hover = rgba(#fff,0.7)
	$ShowWatchedIcon_true = rgba(#fff,0.95)

//File selector
	$FileSelectorText = #fff
	$FileSelectorBg = rgba(0,0,0, 0.07)
	$FileSelectorShadow = rgba(0, 0, 0, 0.67)

//Settings
    $SettingsCategoriesText = #bf8d47
    $SettingsSeparator = darken($BgColor1,25%)

    $InputBoxBg = darken($TitleBarBg,20%)
    $InputBoxText = #fff
    
    $SettingsText1 = #bf8d47
    $SettingsText2 = #bf8d47

    $SettingsButtonText = $ButtonText
    $SettingsButtonTextHover = $ButtonText

//Misc
    $FavoriteColor = #FE9148
    $PosterFavHover = darken($TitleBarBg,25%)
	$PosterFavSelected = darken($TitleBarBg,35%)
	$PosterWatchedHover = darken($TitleBarBg,25%)
    
    $PngLogo = brightness(1.00)


